<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<div id="friends">
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
    <% @friends.each do |friend| %>
      <tr>
        <%= render friend %>
        <td><%= link_to "Show", friend %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New friend", new_friend_path %>
